{
  "manifest_version": 2,
  "name": "Image_A11y Extension",
  "version": "1.0",
  "description": "Run OCR function on images to scan text, add it to the DOM for screen readers",
  "icons": {
    "48": "/icons/border-48.png"
  },
  "browser_action": {
    "default_icon": "./icons/border-48.png",
    "default_title": "Image A11y"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' blob: https://cdn.rawgit.com; object-src 'self' blob:;",
  "permissions": ["contextMenus", "<all_urls>"],
  "background": {
    "scripts": ["dist/tesseract.js", "background.js"]
  }
