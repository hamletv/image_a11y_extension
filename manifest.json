{

  "manifest_version": 2,
  "name": "Image_A11y Estension",
  "version": "1.0",

  "description": "Run OCR function on page images to scan text, add it to the DOM
  and improve web accessibility",

  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Image A11y"
  },

  "content_scripts": [
    {
      "matches": ["*://*.*/*"],
      "js": ["tesseract.js/ocr_images.js",
      "tesseract.js/dist/tesseract.dev.js"]
    }
  ]

}
